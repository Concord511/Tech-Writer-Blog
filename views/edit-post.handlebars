<article>
    <a href="/dashboard">Back</a>
    <h2>
        Edit Post
    </h2>
    <form class="form-edit-post">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <input name="post-content" type="text" value="{{post.content}}" />
        </div>
        <div>
            Posted by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "Comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-button">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-content"></textarea>
    </div>

    <div>
        <button type="submit">Add a Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>